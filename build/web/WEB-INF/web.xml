<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <context-param>
        <param-name>NombreQuestions</param-name>
        <param-value>5</param-value>
    </context-param>
    <context-param>
        <param-name>ATheme</param-name>
        <param-value>random</param-value>
    </context-param>
    <context-param>
        <param-name>BTheme</param-name>
        <param-value>history</param-value>
    </context-param>
    <context-param>
        <param-name>CTheme</param-name>
        <param-value>sciences</param-value>
    </context-param>
    <context-param>
        <param-name>DTheme</param-name>
        <param-value>geo</param-value>
    </context-param>
    <context-param>
        <param-name>ETheme</param-name>
        <param-value>sport</param-value>
    </context-param>
    <context-param>
        <param-name>FTheme</param-name>
        <param-value>language</param-value>
    </context-param>
    <servlet>
        <servlet-name>HomeControllerServlet</servlet-name>
        <servlet-class>org.silverolympics.controller.HomeControllerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GameOptionsPanelControllerServlet</servlet-name>
        <servlet-class>org.silverolympics.controller.GameOptionsPanelControllerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PageNotFoundServlet</servlet-name>
        <servlet-class>org.silverolympics.controller.PageNotFoundServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SoloGameControllerServlet</servlet-name>
        <servlet-class>org.silverolympics.controller.SoloGameControllerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EndScreenControllerServlet</servlet-name>
        <servlet-class>org.silverolympics.controller.EndScreenControllerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HelpControllerServlet</servlet-name>
        <servlet-class>org.silverolympics.controller.HelpControllerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomeControllerServlet</servlet-name>
        <url-pattern>/acceuil</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GameOptionsPanelControllerServlet</servlet-name>
        <url-pattern>/jeusolooptions</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PageNotFoundServlet</servlet-name>
        <url-pattern>/erreur404</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SoloGameControllerServlet</servlet-name>
        <url-pattern>/jeusolo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EndScreenControllerServlet</servlet-name>
        <url-pattern>/ecranfinpartie</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HelpControllerServlet</servlet-name>
        <url-pattern>/aide</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
