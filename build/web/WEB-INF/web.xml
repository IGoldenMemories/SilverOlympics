<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <servlet>
        <servlet-name>HomeControllerServlet</servlet-name>
        <servlet-class>org.silverolympics.controller.HomeControllerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterControllerServlet</servlet-name>
        <servlet-class>org.silverolympics.controller.RegisterControllerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginControllerServlet</servlet-name>
        <servlet-class>org.silverolympics.controller.LoginControllerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ScoreBoardControllerServlet</servlet-name>
        <servlet-class>org.silverolympics.controller.ScoreBoardControllerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GameOptionsPanelControllerServlet</servlet-name>
        <servlet-class>org.silverolympics.controller.GameOptionsPanelControllerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PageNotFoundServlet</servlet-name>
        <servlet-class>org.silverolympics.controller.PageNotFoundServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SoloGameControllerServlet</servlet-name>
        <servlet-class>org.silverolympics.controller.SoloGameControllerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EndScreenControllerServlet</servlet-name>
        <servlet-class>org.silverolympics.controller.EndScreenControllerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HelpControllerServlet</servlet-name>
        <servlet-class>org.silverolympics.controller.HelpControllerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomeControllerServlet</servlet-name>
        <url-pattern>/acceuil</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterControllerServlet</servlet-name>
        <url-pattern>/creercompte</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginControllerServlet</servlet-name>
        <url-pattern>/connection</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ScoreBoardControllerServlet</servlet-name>
        <url-pattern>/classement</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GameOptionsPanelControllerServlet</servlet-name>
        <url-pattern>/jeusolooptions</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PageNotFoundServlet</servlet-name>
        <url-pattern>/erreur404</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SoloGameControllerServlet</servlet-name>
        <url-pattern>/jeusolo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EndScreenControllerServlet</servlet-name>
        <url-pattern>/ecranfinpartie</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HelpControllerServlet</servlet-name>
        <url-pattern>/aide</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
